# ------------------------
# HTTP → HTTPS редірект
# ------------------------
server {
    listen 80;
    server_name {{ ansible_host | default('_') }};
    return 301 https://$host$request_uri;
}

# ------------------------
# HTTPS server block
# ------------------------
server {
    listen 443 ssl;
    server_name {{ ansible_host | default('_') }};

    ssl_certificate /etc/nginx/ssl/nginx.crt;
    ssl_certificate_key /etc/nginx/ssl/nginx.key;

    root {{ wordpress_site_path }};
    index index.php index.html index.htm;

    # ------------------------
    # WordPress PHP
    # ------------------------
    location ~ \.php$ {
        include snippets/fastcgi-php.conf;
        fastcgi_pass unix:/var/run/php/php8.1-fpm.sock;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        include fastcgi_params;
    }

    # ------------------------
    # aaPanel reverse proxy (розміщений перед WordPress)
    # ------------------------
    location /aapanel/ {
        proxy_pass http://127.0.0.1:8888/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # Цей рядок коректно перенаправляє запити з aaPanel
        # на правильний шлях /aapanel/
        proxy_redirect http://127.0.0.1:8888/ https://$host/aapanel/;
        
        # Ці рядки замінюють посилання, щоб вони правильно працювали з проксі
        sub_filter 'href="/' 'href="/aapanel/';
        sub_filter 'src="/' 'src="/aapanel/';
        sub_filter_once off;
        
        # Вимикаємо стиснення, щоб sub_filter працював правильно
        proxy_set_header Accept-Encoding "";
        
        # Запобігаємо перенаправленню на WordPress
        try_files $uri $uri/;
    }

    # ------------------------
    # WordPress root (розміщений після aaPanel)
    # ------------------------
    location / {
        try_files $uri $uri/ /index.php?$args;
    }
}