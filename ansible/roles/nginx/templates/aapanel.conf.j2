# --- HTTPS proxy to aaPanel ---
server {
    listen 8889 ssl;
    server_name _;

    ssl_certificate /etc/nginx/ssl/nginx.crt;
    ssl_certificate_key /etc/nginx/ssl/nginx.key;

    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;

    # Основний проксі для aaPanel
    location / {
        proxy_pass http://127.0.0.1:8888/;
        proxy_set_header Host $host:8889;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto https;
        
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        
        proxy_redirect off;
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
        send_timeout 60s;
    }
    
     location /aapanel/ {
        proxy_pass http://127.0.0.1:8888/aapanel/;
        proxy_set_header Host $host:8889;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto https;
    }

     location /favicon.ico/ {
        proxy_pass http://127.0.0.1:8888/favicon.ico/;
        proxy_set_header Host $host:8889;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto https;
    }

    # Проксі для статичних файлів aaPanel
    location /static/ {
        proxy_pass http://127.0.0.1:8888/static/;
        proxy_set_header Host $host:8889;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto https;
    }

    # Проксі для інших ресурсів (наприклад, /code)
    location /code {
        proxy_pass http://127.0.0.1:8888/code;
        proxy_set_header Host $host:8889;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto https;
    }

    location /public/ {
        proxy_pass http://127.0.0.1:8888/public/;
        proxy_set_header Host $host:8889;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto https;
    }

    location /login/ {
    	return 302 /aapanel/;
    }

}
